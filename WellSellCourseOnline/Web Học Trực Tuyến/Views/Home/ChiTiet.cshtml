                                    </div>
                                  </div>
                                </div>
               
                            

                  
                    }
                                    }
            </div>
        </nav>
    </div>
    <!-- Navbar(head) End -->


    <!-- Header Start -->
     @foreach(var item in ViewBag.danhsachkhoahoc as List<Library_Class.Entities.KhoaHocOnline>){
