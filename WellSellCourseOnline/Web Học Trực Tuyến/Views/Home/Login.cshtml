<!DOCTYPE html>
<html lang="en">
@{
    Layout= "~/Views/Shared/Layout1.cshtml";
}

@model Web_Học_Trực_Tuyến.Models.Hocvien_Giangvien_Taikhoan
<
        <div class="container pb-3">
                 @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                    {
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="categoryId">
                                 Tài khoản <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.EditorFor(m => m.taikhoans.Id, new { @class = "form-control col-md-7 col-xs-12",required="required" })

                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="categoryId">
                                 Mật khẩu <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.PasswordFor(m => m.taikhoans.MatKhau, new {placeholder="Matkhau", @class = "form-control col-md-7 col-xs-12",required="required",id="txtPassword" })
                             

                            </div>
                        </div>
                      
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="reset">Reset</button>
                                 <a href="https://localhost:7226/Dangky/FormDK" class="btn btn-info" type="reset">Đăng ký</a>
                                <button type="submit" onclick="return Validate()" class="btn btn-success">Đăng nhập</button>
                            </div>
                        </div>
                    }
            </div>

            <script type="text/javascript">
    function Validate() {
        var password = document.getElementById("txtPassword").value;
        var confirmPassword = document.getElementById("txtConfirmPassword").value;
        if (password != confirmPassword) {
            alert("Passwords do not match.");
            return false;
        }
        return true;
    }
</script>